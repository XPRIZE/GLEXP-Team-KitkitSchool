<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/video_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="36dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tutorial_title_textView"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="6"
                android:textSize="27sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_video_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:scrollbars="none"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/musicvideo_title_textView"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="6"
                android:textSize="27sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_video_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:scrollbars="none"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/literacy_video_title_textView"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="6"
                android:textSize="27sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_video_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:scrollbars="none"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/literacy_video_title_textView_2"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="6"
                android:textSize="27sp"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_video_2_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:scrollbars="none"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/math_video_title_textView"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="6"
                android:textSize="27sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_video_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:scrollbars="none"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/math_video_title_textView_2"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="6"
                android:textSize="27sp"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_video_3_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:scrollbars="none"
                android:visibility="gone"></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/alphabet_video_title_textView"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="6"
                android:textSize="27sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_video_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="41"
                android:scrollbars="none"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
